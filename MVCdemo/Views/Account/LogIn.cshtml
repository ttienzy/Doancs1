@using MVCdemo.Dtos
@model LogInAccount



@section css {
    <link rel="stylesheet" href="~/css/LogIO.css">
}

<body>
    <div class="container" id="container">
        <div class="form-container sign-in">
            <form asp-action="LogIn">
                <h1>Tài khoản</h1>
                <div class="social-icons">
                    <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-github"></i></a>
                    <a href="#" class="icon"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="UserName" placeholder="UserName">
                <span asp-validation-for="UserName" class="text-danger"
                    style="text-align: left;color:red;margin-left:-110px;"></span>
                <input asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"
                    style="text-align: left;color:red;margin-left:-110px;"></span>
                <button type="submit">Đăng nhập</button>
                <a asp-action="Register">Quên mật khẩu</a>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-right">
                    <h1>Welcome Back!</h1>
                    <p>Nhập thông tin cá nhân của bạn để sử dụng tất cả các tính năng của trang web</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        /*-------------------------HIDDEN-----------------*/
        const element = document.querySelector('.hapodigital-header');
        element.style.display = 'none';
        const element1 = document.querySelector('.menu');
        element1.style.display = 'none';
        const element2 = document.querySelector('.marquee-container');
        element2.style.display = 'none';
    </script>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}